{
  "id": "openvpn",
  "cpus": 0.01,
  "mem": 128,
  "instances": 1,
  "cmd": "/dcos/bin/run.bash scheduler",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/dcos-openvpn",
      "forcePullImage": true,
      "network": "HOST"
    }
  },
  "acceptedResourceRoles": [
    "slave_public"
  ],
  "ports": [ 0 ],
  "env": {
    "MESOS_CONFIG": "zk://master.mesos:2181/mesos",
    "IMAGE": "mesosphere/dcos-openvpn"
  }
}
